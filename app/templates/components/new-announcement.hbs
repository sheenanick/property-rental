{{#if addNewAnnouncement}}
  <h1>New Announcement</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="message">Message</label>
        {{input value=message id="message"}}
      </div>
      <button {{action 'saveAnnouncement'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}} class="btn btn-success">Add New Announcement</button>
{{/if}}
